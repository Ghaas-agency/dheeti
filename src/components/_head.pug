mixin head(pathPrefix, title, description)
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title=title

    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Merriweather:700|Open+Sans:400,700&display=swap")
    link(rel="stylesheet", href=`${pathPrefix}assets/css/style.css`)

    link(rel='apple-touch-icon-precomposed', sizes='57x57', href=`${pathPrefix}assets/img/apple-touch-icon-57x57.png`)
    link(rel='apple-touch-icon-precomposed', sizes='114x114', href=`${pathPrefix}assets/img/apple-touch-icon-114x114.png`)
    link(rel='apple-touch-icon-precomposed', sizes='72x72', href=`${pathPrefix}assets/img/apple-touch-icon-72x72.png`)
    link(rel='apple-touch-icon-precomposed', sizes='144x144', href=`${pathPrefix}assets/img/apple-touch-icon-144x144.png`)
    link(rel='apple-touch-icon-precomposed', sizes='60x60', href=`${pathPrefix}assets/img/apple-touch-icon-60x60.png`)
    link(rel='apple-touch-icon-precomposed', sizes='120x120', href=`${pathPrefix}assets/img/apple-touch-icon-120x120.png`)
    link(rel='apple-touch-icon-precomposed', sizes='76x76', href=`${pathPrefix}assets/img/apple-touch-icon-76x76.png`)
    link(rel='apple-touch-icon-precomposed', sizes='152x152', href=`${pathPrefix}assets/img/apple-touch-icon-152x152.png`)
    link(rel='icon', type='image/png', href=`${pathPrefix}assets/img/favicon-196x196.png', sizes='196x196`)
    link(rel='icon', type='image/png', href=`${pathPrefix}assets/img/favicon-96x96.png', sizes='96x96`)
    link(rel='icon', type='image/png', href=`${pathPrefix}assets/img/favicon-32x32.png', sizes='32x32`)
    link(rel='icon', type='image/png', href=`${pathPrefix}assets/img/favicon-16x16.png', sizes='16x16`)
    link(rel='icon', type='image/png', href=`${pathPrefix}assets/img/favicon-128.png', sizes='128x128`)
    meta(name='application-name', content='Â ')
    meta(name='msapplication-TileColor', content='#FFFFFF')
    meta(name='msapplication-TileImage', content=`${pathPrefix}assets/img/mstile-144x144.png`)
    meta(name='msapplication-square70x70logo', content=`${pathPrefix}assets/img/mstile-70x70.png`)
    meta(name='msapplication-square150x150logo', content=`${pathPrefix}assets/img/mstile-150x150.png`)
    meta(name='msapplication-wide310x150logo', content=`${pathPrefix}assets/img/mstile-310x150.png`)
    meta(name='msapplication-square310x310logo', content=`${pathPrefix}assets/img/mstile-310x310.png`)

    meta(name='image', content=`${pathPrefix}assets/img/growthpal-meta.jpg`)
    meta(name='description', content=`${description}`)
    meta(name='image', content=`${pathPrefix}assets/img/growthpal-meta.jpg`)
    // Schema.org for Google
    meta(itemprop='name', content=`${title}`)
    meta(itemprop='description', content=`${description}`)
    meta(itemprop='image', content=`${pathPrefix}assets/img/growthpal-meta.jpg`)
    // Twitter
    meta(name='twitter:card', content='summary')
    meta(name='twitter:title', content=`${title}`)
    meta(name='twitter:description', content=`${description}`)
    meta(name='twitter:site', content='')
    meta(name='twitter:creator', content='')
    meta(name='twitter:image:src', content=`${pathPrefix}assets/img/growthpal-meta.jpg`)
    // Open Graph general (Facebook, Pinterest & Google+)
    meta(name='url', property='og:url', content='https://www.growthpal.com')
    meta(name='site_name', property='og:site_name', content='Dheeti Technologies')
    meta(name='title', property='og:title', content=`${title}`)
    meta(name='type', property='og:type', content='website')
    meta(name='image', property='og:image', content=`${pathPrefix}assets/img/growthpal-meta.jpg`)
    meta(name='description', property='og:description', content=`${description}`)
